{
  "name": "polybot",
  "version": "0.1.0",
  "description": "multiplatform chatbots deployments",
  "main": "./build/lib/index",
  "repository": "polybot-io/polybot-cli",
  "author": "Mario Colque <colquemario@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "gulp",
    "test": "xo && ava",
    "pkg": "pkg . --out-dir out"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "transform-async-to-generator"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "ignores": [
      "build/**",
      "out/**",
      "test/_fixtures/**"
    ],
    "rules": {
      "import/no-unresolved": 0,
      "ava/no-ignored-test-files": 0,
      "max-depth": 0,
      "no-use-before-define": 0,
      "complexity": 0,
      "unicorn/no-process-exit": 0,
      "no-control-regex": 0,
      "no-case-declarations": 0,
      "no-useless-escape": 0
    }
  },
  "bin": {
    "polybot": "./build/bin/polybot"
  },
  "devDependencies": {
    "email-prompt": "^0.1.8",
    "email-validator": "^1.0.7",
    "fs-promise": "^1.0.0",
    "gulp": "^3.9.1",
    "node-fetch": "^1.6.3",
    "xo": "^0.17.1"
  },
  "dependencies": {
    "ava": "^0.17.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "bytes": "^2.4.0",
    "chalk": "^1.1.3",
    "cross-spawn": "^5.0.1",
    "del": "^2.2.2",
    "gulp-babel": "^6.1.2",
    "gulp-ext": "^1.0.0",
    "gulp-task-listing": "^1.0.1",
    "minimist": "^1.2.0",
    "ms": "^0.7.2",
    "progress": "^1.1.8"
  }
}
